{ 
    "manifest_version": 2,
    "background": {
        "page": "background.html"
    },
    "name": "Storage Downloader",
    "description": "This extension to download content to local storage.",
    "version": "1.0",
    "browser_action": {
      "default_icon": "/icon.png",
      "default_popup": "/popup.html"
    },
    "permissions": [
      "identity",
      "activeTab",
      "https://ajax.googleapis.com/",
      "tabs",
      "downloads",
      "activeTab", 
      "contextMenus", 
      "notifications", 
      "storage", 
      "https://*/*", 
      "http://*/*"
    ]
  }